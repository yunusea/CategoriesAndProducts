
<h1>Category List</h1>
<input type="submit" class="btn btn-block" name="GoAddPage" value="Add" ng-click="GoAddPage()" id="btnGoAddPage" />
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Status</th>
        <th>Order</th>
        <th>Query</th>
    </tr>
    <tr ng-repeat="category in AllCategoryList">
        <td>{{category.CategoryID}}</td>
        <td>{{category.CategoryName}}</td>
        <td ng-if="category.IsActive == true"><span class="text-success">Aktif</span></td>
        <td ng-if="category.IsActive == false"><span class="text-danger">Pasif</span></td>
        <td>{{category.Order}}</td>
        <td><input type="submit" class="btn btn-default" value="Edit" ng-click="EditCategory(category.CategoryID)" id="btnEditCategory" /><input type="submit" class="btn btn-default" value="Delete" ng-click="DeleteCategory(category.CategoryID)" id="btnDeleteCategory" /> </td>
    </tr>
</table>

<div class="col-md-12" id="add" style="display:none">
    <h2>Add Category</h2>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-6">Category Name : </label>
            <div class="col-md-6">
                <input type="text" class="form-control" ng-model="AddCategoryName" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-6">Order : </label>
            <div class="col-md-6">
                <input type="text" class="form-control" ng-model="AddOrder" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-6">Status : </label>
            <div class="col-md-6">
                <input type="checkbox" class="form-control" ng-model="AddIsActive" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <input type="submit" class="btn btn-block" name="AddCategory" value="Add" ng-click="AddCategory()" id="btnAddCategory" />
            </div>
        </div>
    </div>
</div>

<div class="col-md-12" id="update" style="display:none">
    <h2>Update Category</h2>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-6">Category Name : </label>
            <div class="col-md-6">
                <input type="text" class="form-control" ng-model="UptCategoryName" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-6">Order : </label>
            <div class="col-md-6">
                <input type="text" class="form-control" ng-model="UptOrder" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-6">Status : </label>
            <div class="col-md-6">
                <input type="checkbox" class="form-control" ng-model="UptIsActive" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <input type="submit" class="btn btn-block" name="UpdateCategory" value="Update" ng-click="UpdateCategory(Id)" id="btnUpdateCategory" />
            </div>
        </div>
    </div>
</div>