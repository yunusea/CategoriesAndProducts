
<div class="col-md-12">
    <h2>Add Category</h2>
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-6">Category Name : </label>
            <div class="col-md-6">
                <input type="text" class="form-control" ng-model="CategoryName" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-6">Order : </label>
            <div class="col-md-6">
                <input type="text" class="form-control" ng-model="Order" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-6">Status : </label>
            <div class="col-md-6">
                <input type="checkbox" class="form-control" ng-model="IsActive" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <input type="submit" class="btn btn-block" name="AddCategory" value="Add" ng-click="AddCategory()" id="btnAddCategory" />
            </div>
        </div>
    </div>
</div>